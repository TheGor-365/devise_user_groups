<div id="<%= dom_id group %>" class="shadow rounded p-5">
  <strong>
    <%= group.name %>
  </strong>

  <% if group.users.include?(current_user) %>
    <%= button_to 'Leave', leave_group_path(group), method: :delete, class: 'text-danger mt-3 px-5 border border-danger rounded' %>
  <% else %>
    <%= button_to 'Join', join_group_path(group), method: :post, class: 'text-success mt-3 px-5 border border-success rounded' %>
  <% end %>

  <h6 class="text-muted mt-5 mb-3">
    Members
  </h6>

  <ul class="list-group col-5 border border-success">
    <% group.users.each do |user| %>
      <li class="list-group-item">
        <%= user.email %>
      </li>
    <% end %>
  </ul>
</div>
